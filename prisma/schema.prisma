datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                 String  @id @default(uuid())
  name               String
  email              String  @unique
  registrationNumber Int     @unique
  year               Int
  branch             String
  password           String
  emailVerified      Boolean

  @@map("users")
}

model Admin {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password      String
  emailVerified Boolean
  Notice        Notice[]

  @@map("admins")
}

model VerificationToken {
  id         String   @id @default(uuid())
  identifier String
  email      String
  expires    DateTime

  @@map("verification_tokens")
}

model Notice {
  id          String   @id @default(uuid())
  admin       Admin    @relation(fields: [adminEmail], references: [email])
  adminEmail  String
  tags        Tag[]
  isPublished Boolean  @default(false)
  title       String
  body        String
  attachments String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Tag {
  id       String  @id @default(uuid())
  tagName  String
  tagColor String
  Notice   Notice? @relation(fields: [noticeId], references: [id])
  noticeId String?
}
